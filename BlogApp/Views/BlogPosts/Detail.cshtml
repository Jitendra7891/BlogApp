@model BlogApp.Models.BlogPost

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Author</h6>
            <p class="card-text">@Model.Content</p>
            <p class="card-text"><small class="text-muted">@Model.PublicationDate</small></p>
        </div>
        <div class="card-footer text-right">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
            <a asp-action="GetBlogPosts" class="btn btn-secondary">Back to Posts</a>
        </div>
    </div>
</div>
